# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================================================
# Backend API Configuration
# ============================================================================
# URL of the backend API server
# For local development:
REACT_APP_BACKEND_URL=http://localhost:8000

# For production (update with your actual Railway backend URL):
# REACT_APP_BACKEND_URL=https://your-backend-app.railway.app

# ============================================================================
# Optional: Feature Flags
# ============================================================================
# Enable/disable visual editing features
# REACT_APP_ENABLE_VISUAL_EDITS=false

# Enable/disable health check plugin
# ENABLE_HEALTH_CHECK=false

# Disable hot reload (useful for debugging)
# DISABLE_HOT_RELOAD=false

# ============================================================================
# Optional: Analytics and Monitoring
# ============================================================================
# Add your analytics IDs here if needed
# REACT_APP_GA_TRACKING_ID=
# REACT_APP_SENTRY_DSN=
